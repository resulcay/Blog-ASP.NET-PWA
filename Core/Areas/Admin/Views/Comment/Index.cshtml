@using EntityLayer.Concrete
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<style>
    .horizontal-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .horizontal-container h5,
    .horizontal-container span {
        margin-top: 10px;
        margin-right: 5px;
    }
</style>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h3>Yorumlar  </h3>
                </div>
                <div class="ibox-content table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Yorum Sahibi</th>
                                <th>Yorum Başlığı</th>                             
                                <th>Blog Başlığı</th>
                                <th>Blog Yazarı</th>
                                <th style="text-align:center">Puan</th>
                                <th style="text-align:center">Tarih</th>
                                <th style="text-align:center">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <th style="vertical-align:middle;">@item.CommentID</th>
                                    <td style="vertical-align:middle;">@item.CommentUserName</td>
                                    <td style="vertical-align:middle;">@item.CommentTitle</td>
                                    <td style="vertical-align:middle;">@item.Blog.BlogTitle</td>
                                    <td style="vertical-align:middle;" class="text-navy"> <i class="fa fa-level-up"></i> @item.Blog.Writer.WriterName </td>
                                    <td style="text-align:center; vertical-align:middle;">
                                        <div class="horizontal-container">
                                            <h5>@item.BlogRating</h5>
                                            <span class="pie">0.52,1.041</span>
                                        </div>
                                    </td>
                                    <td style="text-align:center; vertical-align:middle;">@item.CommentCreatedAt</td>
                                    <td style="vertical-align:middle;" class="text-center">
                                        <button class="btn btn-danger" style="width:50px; padding: 8px 10px; font-size: 14px; text-align: center;"
                                                onclick="confirmDelete('@item.CommentID')">
                                            Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(commentId) {
        Swal.fire({
            title: 'Sil?',
            text: 'Yorumu silmek istediğinize emin misiniz?',
            showDenyButton: true,
            confirmButtonText: 'Evet',
            denyButtonText: 'Hayır',
            customClass: {
                actions: 'my-actions',
                cancelButton: 'order-1 right-gap',
                confirmButton: 'order-2',
                denyButton: 'order-3',
            },
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Admin/Comment/DeleteComment/' + commentId;
            }
        })
    }
</script>

