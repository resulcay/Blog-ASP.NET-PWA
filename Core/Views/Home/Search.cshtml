@model List<SearchResultViewModel>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div style="margin-top: 20px; margin-left: 20px; margin-bottom:20px;">
    @{
        if (Model.Count == 0)
        {
            <h1>Sonuç yok...</h1>
            <br />
        }
        else
        {
            <h4>@Model[0].Payload</h4>
        }
    }
    <div style="margin-top: 20px; margin-left: 20px; margin-bottom:20px;">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="@item.ControllerName@item.ActionName">
                        @item.ControllerName@item.ActionName
                    </a>
                </li>
            }
        </ul>
    </div>
</div>